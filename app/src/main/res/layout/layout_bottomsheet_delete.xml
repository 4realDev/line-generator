<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp">

    <LinearLayout
        android:id="@+id/bottomsheet_trick_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="26dp"
        android:paddingEnd="26dp">

        <TextView
            android:id="@+id/bottomsheet_trick_edit__trick_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/trick_settings_bottomsheet_title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <!--<ImageView-->
        <!--android:id="@+id/bottomsheet_trick_edit__image"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:backgroundTint="@color/colorAccent"-->
        <!--android:elevation="11dp"-->
        <!--android:gravity="center"-->
        <!--android:padding="20dp"-->
        <!--android:src="@drawable/ic_create"-->
        <!--android:tint="@color/colorAccent" />-->


        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottomsheet_trick_edit__direction_in_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/colorSecondaryDark">

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__direction_in_regular"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/trick_direction_in_regular"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__direction_in_fakie"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/trick_direction_in_fakie"
                android:textSize="14sp" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bottomsheet_trick_edit__text_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/colorSecondary"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="@color/colorSecondaryDark"
            app:errorEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bottomsheet_trick_edit__trick_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trick_create_fragment_text_input_field"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottomsheet_trick_edit__direction_out_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/colorSecondaryDark">

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__direction_out_to_regular"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_out_coming_to_regular"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__direction_out_to_fakie"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_out_coming_to_fakie"
                android:textSize="14sp" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottomsheet_trick_edit__difficulty_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/colorSecondaryDark">

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__difficulty_save"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_difficulty_save"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__difficulty_easy"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_difficulty_easy"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__difficulty_middle"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_difficulty_middle"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__difficulty_hard"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_difficulty_hard"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/bottomsheet_trick_edit__difficulty_crazy"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/trick_difficulty_crazy"
                android:textSize="14sp" />

        </info.hoang8f.android.segmented.SegmentedGroup>

    </LinearLayout>

